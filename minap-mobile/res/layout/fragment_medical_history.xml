          <TextView
			    android:layout_width="0dip"
			    android:layout_height="wrap_content"
			    android:text="@string/value_label_previous_ami"
			    style="?android:listSeparatorTextViewStyle"
			    android:layout_weight="1"
		    	/>
		 <ImageButton
               android:id="@+id/about_previous_ami"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:contentDescription="@string/button_about_value"
               android:src="@drawable/ic_action_about" 
               android:background="@drawable/button_about_value"
               android:layout_gravity="bottom"
	           android:layout_marginBottom="1dp"/>
		</LinearLayout>

		<Spinner 
	        android:id="@+id/previous_ami_spinner"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        />       
	        
